{% extends 'base.html.twig' %}

{% block body %}
    <h1>Publicites list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Url</th>
                <th>Placement</th>
                <th>Start</th>
                <th>End</th>
                <th>Click</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publicite in publicites %}
            <tr>
                <td><a href="{{ path('publicite_show', { 'id': publicite.id }) }}">{{ publicite.id }}</a></td>
                <td>{{ publicite.title }}</td>
                <td>{{ publicite.url }}</td>
                <td>{{ publicite.placement }}</td>
                <td>{% if publicite.start %}{{ publicite.start|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if publicite.end %}{{ publicite.end|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ publicite.click }}</td>
                <td>{{ publicite.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('publicite_show', { 'id': publicite.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('publicite_edit', { 'id': publicite.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('publicite_new') }}">Create a new publicite</a>
        </li>
    </ul>
{% endblock %}
