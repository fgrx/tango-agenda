{% extends 'base.html.twig' %}

{% block body %}
    <h1>Publicite</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publicite.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ publicite.title }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ publicite.url }}</td>
            </tr>
            <tr>
                <th>Placement</th>
                <td>{{ publicite.placement }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{% if publicite.start %}{{ publicite.start|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{% if publicite.end %}{{ publicite.end|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Click</th>
                <td>{{ publicite.click }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ publicite.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('publicite_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('publicite_edit', { 'id': publicite.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
